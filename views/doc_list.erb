<% @docs.each do |filename| %>
  <ul>
    <li>
      <form action="<%= filename %>/delete" method="post" id="delete_<%= filename %>"></form>
      <form action="<%= filename %>/edit" method="get" id="edit_<%=filename %>"></form>
      <a href="<%= filename %>"><%= filename %></a> | 
      <button type="submit" form="edit_<%= filename %>" value="edit">Edit</button> | 
      <button type="submit" form="delete_<%= filename %>" value="delete">Delete</button>
    </li>
  </ul>
<% end %>

